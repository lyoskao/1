<Window
    x:Class="WinUi3.AuthWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="Авторизація">

    <StackPanel Margin="20">
        <TextBlock Text="Логін" FontSize="16" Margin="0,0,0,5"/>
        <TextBox x:Name="LoginTextBox" PlaceholderText="Введіть логін" Margin="0,0,0,10"/>

        <TextBlock Text="Пароль" FontSize="16" Margin="0,10,0,5"/>
        <PasswordBox x:Name="PasswordBox" PlaceholderText="Введіть пароль" Margin="0,0,0,10"/>

        <Button Content="Увійти" Click="LoginButton_Click" Margin="0,10,0,5"/>
        <Button Content="Зареєструватися" Click="RegisterButton_Click"/>
    </StackPanel>
</Window>
