<Window
    x:Class="WinUi3.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="Догляд за рослинами">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="2*" />
        </Grid.ColumnDefinitions>

        <ListBox x:Name="CareMethodsListBox"
                 Grid.Column="0"
                 Margin="10"
                 SelectionChanged="CareMethodsListBox_SelectionChanged">
            <ListBoxItem Content="Поливка" />
            <ListBoxItem Content="Добриво" />
            <ListBoxItem Content="Обрізка" />
            <ListBoxItem Content="Пересадка" />
        </ListBox>

        <TextBlock x:Name="DescriptionTextBlock"
                   Grid.Column="1"
                   Margin="10"
                   TextWrapping="Wrap"
                   FontSize="16"
                   VerticalAlignment="Top"
                   Text="Оберіть метод догляду, щоб побачити опис." />
    </Grid>
</Window>
